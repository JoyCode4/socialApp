<script src="https://use.fontawesome.com/fe459689b4.js"></script>
<li>
    <div class="upper">
        <p>
            <%= post.content %>
        </p>
        <div class="likes">

            <a class="toggle-like-button" data-likes="<%=post.likes.length %>"
                href="/likes/toggle/?id=<%=post._id%>&type=Post">
                <button class="btn" id="like-<%= post._id %>"><i class="fa fa-thumbs-up fa-lg"
                        aria-hidden="true"></i></button>

                <span>
                    <%= post.likes.length %>
                </span>
            </a>
        </div>

        <% if(post.user.id==locals.user.id){%>
            <a href="/posts/destroy/<%= post._id %>"><i class="fa-solid fa-trash"></i></a>
            <%} %>
    </div>
    <p>Post By : <%= post.user.name %>
            </str>
            <div class="comment-list">
                <h4 class="comment-header">Comments : </h4>
                <% for(let com of post.comment){%>
                    <%- include("_comment",{com:com}) %>
                        <%} %>
            </div>
            <form action="/comments/create" method="POST">
                <div class="add-comment">
                    <input type="text" name="content" placeholder="comment here">
                    <input type="hidden" name="post" value="<%= post._id %>">
                    <button id="input-comment">Send Comment</button>
                </div>
            </form>
</li>