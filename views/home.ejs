<link rel="stylesheet" href="/css/home.css">
<div class="home">

    <% if(locals.user){%>
        <div>
            <div class="create-post">
                <h1>Create Post</h1>
                <form id="new-post-form" class="cf" action="/posts/create" method="POST">
                    <div>
                        <textarea name="content" type="text" id="input-message" placeholder="Type here"></textarea>
                    </div>
                    <input type="submit" value="Submit" id="input-submit">
                </form>
            </div>

            <div class="posts">
                <strong>Posts</strong>

                <ul id="posts-list" class="alternating-colors">
                    <% for(let post of posts){ %>
                        <%- include("_post",{post:post})%>
                            <%}%>
                </ul>
            </div>
        </div>

        <div class="friends-list posts">
            <h1>Friends</h1>
            <ul>
                <% for(let u of all_users){%>
                    <li>
                        <a style="color: rgb(17, 4, 65);" href="/users/profile/<%=u.id%>">
                            <%= u.name %>
                        </a>
                    </li>
                    <%} %>
            </ul>
        </div>

        <%} %>
</div>

<script src="/js/home_posts.js"></script>